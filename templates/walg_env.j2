{{ ansible_managed | comment }}

# AWS S3 access
AWS_ACCESS_KEY_ID={{ walg_s3_access_key }}
AWS_REGION={{ walg_s3_region }}
AWS_SECRET_ACCESS_KEY={{  walg_s3_secret_access_key }}

# PostgreSQL access
PGHOST=/var/run/postgresql
#PGUSER=
#PGPASSWORD=
#PGPASSFILE=

# Wal-G Setup
WALG_DELTA_MAX_STEPS=5
WALG_DOWNLOAD_CONCURRENCY=16
WALG_S3_PREFIX=s3://{{ walg_s3_bucket }}/{{ walg_s3_prefix}}
WALG_S3_STORAGE_CLASS=STANDARD_IA
WALG_UPLOAD_CONCURRENCY=16
WALG_UPLOAD_DISK_CONCURRENCY=6
