{{ ansible_managed | comment }}

# AWS S3 access
AWS_ACCESS_KEY_ID={{ walg_s3_access_key }}
AWS_REGION={{ walg_s3_region }}
AWS_SECRET_ACCESS_KEY={{  walg_s3_secret_access_key }}
WALG_S3_PREFIX=s3://{{ walg_s3_bucket }}/{{ walg_s3_prefix}}
WALG_S3_STORAGE_CLASS={{ walg_s3_storage_class }}

# PostgreSQL access
PGHOST=/var/run/postgresql
#PGUSER=
#PGPASSWORD=
#PGPASSFILE=

# Wal-G Setup
WALG_DELTA_MAX_STEPS={{ walg_backup_delta_steps }}
WALG_DOWNLOAD_CONCURRENCY={{ walg_backup_download }}
WALG_UPLOAD_CONCURRENCY={{ walg_backup_upload }}
WALG_UPLOAD_DISK_CONCURRENCY={{ walg_backup_upload_disk }}
